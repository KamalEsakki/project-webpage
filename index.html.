  <!-- Butterfly image -->
  <img src="./butterfly.jpeg.png" class="butterfly" id="butterfly" alt="Butterfly Button">

  <div id="hint"></div>
  <div id="textBox"></div>

  <!-- Glowing overlay -->
  <div id="glow"></div>

  <!-- Second Scene -->
  <div id="scene2">
    <img src="./301ed065-b261-4fc9-9989-60e0252c5dce.png.jpg" alt="Love">
    <p class="subtext">
      You are beautiful in ways the world can never explain.<br>
      This heart chose you, and it keeps choosing you. ‚ù§Ô∏è
    </p>
  </div>

  <script>
    // Set Names
    let her = "Beauty";
    let me = "I";

    let lines = [
      `Hey ${her}...`,
      "Take a breath, Beautiful...",
      "Don‚Äôt rush this moment...",
      `${me} ain‚Äôt just watching you...`,
      "I‚Äôm living the calm you bring...",
      "Every glance, every smile...",
      "Feels like peace after chaos...",
      "Love didn‚Äôt just happen...",
      "It found its meaning in you. ‚ù§Ô∏è"
    ];

    let box = document.getElementById("textBox");
    let butterfly = document.getElementById("butterfly");
    let hint = document.getElementById("hint");
    let glow = document.getElementById("glow");
    let scene2 = document.getElementById("scene2");
    let index = 0;

    butterfly.style.pointerEvents = "none";
    butterfly.style.opacity = 0.3;

    function showLine() {
      box.style.opacity = 0;
      setTimeout(() => {
        box.innerHTML = lines[index];
        box.style.opacity = 1;
        index++;
        if (index === lines.length) {
          setTimeout(() => {
            butterfly.style.pointerEvents = "auto";
            butterfly.style.opacity = 1;
            hint.innerHTML = "Tap that handsome guy ü¶ã";
            hint.style.opacity = "1";
          }, 2000);
        }
      }, 400);

      if (index < lines.length) {
        setTimeout(showLine, 2600);
      }
    }
    showLine();

    // ü¶ã Click to release butterflies + transition
    function goNext() {
      box.style.opacity = 0;
      hint.style.opacity = 0;

      // Create flying butterflies
      for (let i = 0; i < 70; i++) {
        let b = document.createElement("div");
        b.classList.add("fly");
        b.innerHTML = "ü¶ã";
        b.style.left = Math.random() * 100 + "vw";
        b.style.setProperty("--xDir", (Math.random() - 0.5).toFixed(2)); // random direction
        b.style.animationDuration = (Math.random() * 2 + 3) + "s";
        document.body.appendChild(b);
        setTimeout(() => b.remove(), 4500);
      }

      // Add glow effect
      setTimeout(() => glow.style.opacity = "1", 2000);
      setTimeout(() => glow.style.opacity = "0", 3800);

      // Show image + text with soft transition
      setTimeout(() => {
        butterfly.style.display = "none";
        hint.style.display = "none";
        box.style.display = "none";
        scene2.style.display = "flex";
        setTimeout(() => scene2.classList.add("show"), 300);
      }, 4000);
    }

    butterfly.addEventListener("click", goNext);

    // Sparkles
    for (let i = 0; i < 40; i++) {
      let s = document.createElement("div");
      s.classList.add("sparkle");
      s.style.width = s.style.height = Math.random() * 8 + 5 + "px";
      s.style.left = Math.random() * 100 + "vw";
      s.style.animationDuration = Math.random() * 5 + 6 + "s";
      document.body.appendChild(s);
    }
  </script>
</body>
