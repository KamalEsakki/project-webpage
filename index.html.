  <style>
    body {
      margin: 0;
      background: linear-gradient(135deg, #ff6ec4, #7873f5, #4b5efc);
      height: 100vh;
      display: flex;
      justify-content: center;
      align-items: center;
      font-family: "Poppins", sans-serif;
      color: white;
      text-align: center;
      overflow: hidden;
    }

    /* Floating Sparkles */
    .sparkle {
      position: absolute;
      background: rgba(255,255,255,0.5);
      border-radius: 50%;
      animation: float 7s infinite ease-in-out;
    }

    @keyframes float {
      0% {transform: translateY(100vh) scale(0.3); opacity: 0;}
      50% {opacity: 1;}
      100% {transform: translateY(-10vh) scale(1); opacity: 0;}
    }

    /* Butterfly Button */
    .butterfly {
      width: 130px;
      height: auto;
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -60%);
      cursor: pointer;
      transition: 0.6s;
      animation: flap 1.4s infinite ease-in-out;
      filter: drop-shadow(0 0 12px rgba(255,255,255,0.7));
    }

    @keyframes flap {
      0%, 100% {transform: translate(-50%, -60%) rotate(0deg) scale(1);}
      50% {transform: translate(-50%, -60%) rotate(10deg) scale(1.2);}
    }

    /* Text Box */
    #textBox {
      position: absolute;
