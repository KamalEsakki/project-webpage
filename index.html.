      font-size: 28px;
      opacity: 0;
      transition: .7s;
      font-family: "Great Vibes", cursive;
    }

    #hint {
      opacity: 0;
      transition: .7s;
      position: absolute;
      bottom: 22%;
      left: 50%;
      transform: translateX(-50%);
      font-size: 22px;
      letter-spacing: 1px;
      font-family: "Poppins", sans-serif;
    }

    /* Scene 2 */
    #scene2 {
